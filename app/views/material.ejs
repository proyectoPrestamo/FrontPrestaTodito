<!DOCTYPE html>
<html lang="es">
<!--prueba-->
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="shortcut icon" href="resources/imagenes/logoSena.png">
  <link rel="stylesheet" href="/resources/css/material.css">
  <link rel="stylesheet" href="/resources/css/menu-instructor.css">
  <%- include('./partials/boostrap.ejs') %>
  <title>Prestamo herramientas SENA</title>
</head>



<body>
  <!--Contenedor de logos-->
  <%- include('./partials/iconos.ejs') %>
  <!--Contenedor de la imagen-->
  <div class="container">
    <img src="/resources/img/logoSena.png" width="200px" class="mx-auto d-block">
  </div>
  <!-- contenedor del menu -->
  <%- include('./partials/instructor.ejs') %>
 
  <!-- CONTENEDOR DEL FONDO Y EL LETRERO -->
  <div class="fondo rounded-top">
    <div class="container-letrero rounded-top">
      PRESTAMO
    </div>
    <!-- CONTENEDOR DEL FORMULARIO -->
    <div class="formulario">
      <form class="forma-formulario" id="formulario" action="/insertarmaterial" method="post" onsubmit="validarFormulario(e)">
        <h1 class="titulo">Prestamo de materiales</h1>

        <div class="contenedor-items-formulario">
          <input type="number" class="items" placeholder="a" id="documento" name="NOMBRE_MATERIAL">
          <label for="" class="label">Nombre del material</label>
        </div>

        <div class="contenedor-items-formulario">
          <input type="number" class="items" placeholder="a" id="documento" name="DOCUMENTO">
          <label for="" class="label">documento</label>
        </div>

        <div class="contenedor-items-formulario">
          <input type="number" class="items" placeholder="a" id="cantidad" name="CANTIDAD">
          <label for="" class="label">Cantidad</label>
        </div>

        <div class="contenedor-items-formulario">
          <select class="items" aria-placeholder="Default select example" id="material" name="TIPO">
            <% datosMaterial.forEach((material,index)=>{ %>
              <option value="0" hidden>-- Seleccione el tipo --</option>
            <option value="<%= material.TIPO %>"><%= material.TIPO %></option>
          <% }); %>
        </select>
        </div>


        <div class="contenedor-items-formulario">
          <select class="items" aria-placeholder="Default select example" id="unidad" name="UNIDAD">
            <% datosMaterial.forEach((material,index)=>{ %>
              <option value="0" hidden>-- Seleccione la medida --</option>
              <option value="<%= material.MEDIDAS %>"><%= material.MEDIDAS %></option>
          <% }); %>
        </select>
        </div>


        <div class="contenedor-items-formulario">
          <select class="items" aria-placeholder="Default select example" id="jornada" name="JORNADA">
            <option value="0" hidden>-- Seleccione la jornada --</option>
            <option value="Diurna">Diurna</option>
            <option value="Tarde">Tarde</option>
            <option value="Noche">Noche</option>
          </select>
        </div>
        

        <div class="contenedor-items-formulario">
          <input type="date" class="items" placeholder="a" id="fecha" name="FECHA">
          <label for="" class="label"></label>
        </div>

        <div class="contenedor-items-formulario">
          <input type="time" class="items" placeholder="a" id="hora" name="HORA">
          <label for="" class="label"></label>
        </div>
        <input type="submit" id="Reservar-btn" class="reserva-btn">
        <input type="reset" id="Cancelar-btn" class="cancelar-btn" value="CANCELAR">
      </form>
      <!-- CONTENEDOR CARRUSEL -->
      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="fondo-img">
          <div class="carousel-inner">
              <div class="carousel-item active">
                <img src="/resources/img/th.jpg" class="w-70" alt="...">
              </div>
              <div class="carousel-item  ">
                <img src="/resources/img/th.jpg" class="w-70" alt="...">
              </div>
              <div class="carousel-item ">
                <img src="/resources/img/th.jpg" class="w-70" alt="...">
              </div>
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-target="#carouselExampleIndicators" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-target="#carouselExampleIndicators" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </button>
      </div>

      <!-- CONTENEDOR DEL BOTON DE DEVOLUCIONES -->
      <div class="boton-devolucion">
        <input type="submit" id="Devolver-btn" class="reserva-btn" value="DEVOLVER COMO PRODUCTO">
      </div>
    </div>
  </div>
</body>
<script src="/resources/js/material.js"></script>
<script src="/resources/js/iconos.js"></script>

</html>