<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/resources/css/menu-instructor.css">
  <link rel="stylesheet" href="/resources/css/ambiente.css">
  <%- include('./partials/boostrap.ejs') %>
  <title>Prestamo ambientes SENA</title>
</head>



<body>
  <!--Contenedor de logos-->
  <%- include('./partials/iconos.ejs') %>
  <!--Contenedor de la imagen-->
  <div class="container">
    <img src="/resources/img/logoSena.png" width="200px" class="mx-auto d-block">
  </div>
  <!-- contenedor del menu -->
<!-- contenedor del menu -->
<%- include('./partials/instructor.ejs') %>
  <!-- CONTENEDOR DEL FONDO Y EL LETRERO -->
  <div class="fondo rounded-top">
    <div class="container-letrero rounded-top">
      PRESTAMO
    </div>
    <!-- CONTENEDOR DEL FORMULARIO -->
    <div class="formulario">
      <form class="forma-formulario" id="formulario" action="/insertarAmbientes" method="post" onsubmit="validarFormulario(e)">
        <h1 class="titulo">Prestamo de ambientes</h1>
<!-- CONTENEDOR FORMULARIO -->

<div class="contenedor-items-formulario">
  <input type="text" class="items" placeholder="a" id="hora" name="DOCUMENTO">
  <label for="" class="label">Documento</label>
</div>

<div class="contenedor-items-formulario">
  <select class="items" aria-placeholder="Default select example" id="ambiente" name="ID_AMBIENTES">
      <% datosAmbientes.forEach((ambientes,index)=>{ %>
        <option value="0" hidden>-- Seleccione El ambiente --</option>
      <option value="<%= ambientes.ID_AMBIENTES %>"><%= ambientes.ID_AMBIENTES %></option>
    <% }); %>
  </select>
</div>

        <div class="contenedor-items-formulario">
          <select class="items" aria-placeholder="Default select example" id="jornada" name="JORNADA">
            <option value="0" hidden>-- Seleccione la jornada --</option>
            <option value="Diurna">Diurna</option>
            <option value="Tarde">Tarde</option>
            <option value="Noche">Noche</option>
          </select>
        </div>
        

        <div class="contenedor-items-formulario">
          <input type="date" class="items" placeholder="a" id="fecha" name="FECHA">
          <label for="" class="label"></label>
        </div>

        <div class="contenedor-items-formulario">
          <input type="time" class="items" placeholder="a" id="hora" name="HORA">
          <label for="" class="label"></label>
        </div>

        <div class="contenedor-items-formulario">
            <input type="text" class="items-2" placeholder="a" disabled>
            <label for="" class="label">NÂ° de aprendices</label>
          </div>
  

        <div class="contenedor-items-formulario">
            <select class="items-3" aria-placeholder="Default select example" id="aprendices" name="NUMERO_APRENDICES">
              <option value="0"hidden>Seleccione</option>
              <option value="1">10/15</option>
              <option value="2">20/25</option>
              <option value="3">30/35</option>
              <option value="4">40</option>
            </select>
          </div>

        <input type="submit" class="reserva-btn" value="RESERVAR">
        <input type="reset" class="cancelar-btn" value="CANCELAR">
      </form>
    </div>
  </div>
</body>
<script src="/resources/js/ambiente.js"></script>
<script src="/resources/js/iconos.js"></script>
</html>
