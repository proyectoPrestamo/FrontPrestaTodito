<!DOCTYPE html>
<html lang="es">
<!--prueba-->
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/resources/css/menu-instructor.css">
  <link rel="stylesheet" href="/resources/css/herramienta.css">
  <%- include('./partials/boostrap.ejs') %>
  <title>Prestamo herramientas SENA</title>
</head>



<body>
  <!--Contenedor de logos-->
  <%- include('./partials/iconos.ejs') %>
  <!--Contenedor de la imagen-->
  <div class="container">
    <img src="/resources/img/logoSena.png" width="200px" class="mx-auto d-block">
  </div>
  <!-- contenedor del menu -->
  <%- include('./partials/instructor.ejs') %>
  <!-- CONTENEDOR DEL FONDO Y EL LETRERO -->
  <div class="fondo rounded-top">
    <div class="container-letrero rounded-top">
      PRESTAMO
    </div>
    <!-- CONTENEDOR DEL FORMULARIO -->
    <div class="formulario">
      <form class="forma-formulario"id="formulario">
        <h1 class="titulo">Prestamo de herramientas</h1>

<!-- CONTENEDOR CARRUSEL -->
      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="fondo-img">
          <div class="carousel-inner">
              <div class="carousel-item active">
                <img src="/resources/img/th.jpg" class="w-70" alt="...">
              </div>
              <div class="carousel-item  ">
                <img src="/resources/img/th.jpg" class="w-70" alt="...">
              </div>
              <div class="carousel-item ">
                <img src="/resources/img/th.jpg" class="w-70" alt="...">
              </div>
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-target="#carouselExampleIndicators" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-target="#carouselExampleIndicators" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </button>
      </div>
<!-- CONTENEDOR FORMULARIO -->
<div class="contenedor-items-formulario">
  <input type="text" class="items" placeholder="a" id="documento">
  <label for="" class="label">N° de documento</label>
</div>

<div class="contenedor-items-formulario">
  <select class="items" aria-placeholder="Default select example" id="herramienta">
    <% datosHerramienta.forEach((herramientas,index)=>{ %>
      <option value="0" hidden>-- Seleccione el tipo --</option>
    <option value="<%= herramientas.TIPO %>"><%= herramientas.TIPO %></option>
  <% }); %>
  </select>
</div>


<div class="contenedor-items-formulario">
  <input type="text" class="items" placeholder="a" id="cantidad">
  <label for="" class="label">Cantidad</label>
</div>

<div class="contenedor-items-formulario">
  <select class="items" aria-placeholder="Default select example" id="jornada">
    <option value="0" hidden>-- Seleccione la jornada --</option>
    <option value="1">Diurna</option>
    <option value="2">Tarde</option>
    <option value="3">Noche</option>
  </select>
</div>

<div class="contenedor-items-formulario">
  <input type="date" class="items" placeholder="a" id="fecha">
  <label for="" class="label"></label>
</div>

<div class="contenedor-items-formulario">
  <input type="text" class="items" placeholder="a" id="formacion">
  <label for="" class="label">Programa de formacion</label>
</div>

<div class="contenedor-items-formulario">
  <input type="text" class="items" placeholder="a" id="ficha">
  <label for="" class="label">N° de ficha</label>
</div>
        <input type="submit" id="Reservar-btn" class="reserva-btn" value="RESERVAR">
        <input type="submit" id="Cancelar-btn" class="cancelar-btn" value="CANCELAR">
      </form>
    </div>
  </div>
</body>
<script src="/resources/js/herramienta.js"></script>
<script src="/resources/js/iconos.js"></script>

</html>