<div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="bg-success p-3 text-center mt-4">
          <h3>REGISTRO DE INVENTARIO</h3>
        </div>
        <div class="mt-4">
          <form>
            <div class="form-group row">
              <label for="nombre" class="col-sm-2 col-form-label">Nombre <span class="text-danger">*</span></label>
              <div class="col-sm-4">
                <input type="text" class="form-control" id="nombre" placeholder="Introduca el nombre del insumo">
              </div>
            </div>
            <div class="form-group row">
              <label for="descripcion" class="col-sm-2 col-form-label">Descripción <span class="text-danger">*</span></label>
              <div class="col-sm-4">
                <input type="text" class="form-control" id="descripcion" placeholder="Introduzca una descripción">
              </div>
            </div>
            <div class="form-group row">
              <label for="existencias" class="col-sm-2 col-form-label">N° Existencias <span class="text-danger">*</span></label>
              <div class="col-sm-4">
                <input type="number" class="form-control" id="existencias" placeholder="Introduzca el numero de existencias">
              </div>
            </div>
            <div class="form-group row">
              <label for="fecha" class="col-sm-2 col-form-label">Fecha <span class="text-danger">*</span></label>
              <div class="col-sm-4">
                <input type="date" class="form-control" id="fecha">
              </div>
            </div>
            <div class="form-group row">
              <label for="codigo" class="col-sm-2 col-form-label">Código <span class="text-danger">*</span></label>
              <div class="col-sm-4">
                <input type="text" class="form-control" id="codigo" placeholder="Introduzca un Código">
              </div>
            </div>
            <div class="form-group row">
              <label for="imagen" class="col-sm-2 col-form-label">Insertar imagen: <span class="text-danger">*</span></label>
              <div class="col-sm-4">
                <div class="input-group">
                  <div class="d-flex align-items-center">
                    <div class="input-group-prepend">
                      <button class="btn btn-outline-success" type="button" onclick="document.getElementById('imagen').click()"><i class="fas fa-eye"></i></button>
                      <span class="mx-1"></span>
                      <button class="btn btn-outline-danger" type="button" onclick="eliminarImagen()"><i class="fas fa-trash"></i></button>
                    </div>
                  </div>
                  <div class="ml-3">
                    <input type="file" id="imagen" style="display: none;" accept=".jpg,.png" onchange="previewImage()">
                  </div>
                </div>
              </div> 
              <div class="preview-container ml-5 mt-2">
                <img id="preview" style="max-width: 100%; max-height: 200px;">
              </div>
              <div id="modalPreview" class="modal fade" tabindex="-1" role="dialog">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-body">
                      <img id="modalPreviewImage" style="max-width: 100%; max-height: 80vh;">
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="form-group row">
              <div class="col-sm-2"></div>
              <div class="col-sm-4">
                <button type="button" class="btn btn-success" onclick="validarDatos()">Nuevo registro</button>
                <button type="button" class="btn btn-danger" onclick="limpiarCampos()">Limpiar campos</button>
              </div>
            </div>
          </form>
        </div> 
      </div>
    </div>
    </div>
    



