<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/resources/css/control.css">
  <%- include('./partials/boostrap.ejs') %>
    <title>Control de aulas SENA</title>
</head>



<body>
  <!--Contenedor de logos-->
  <div class="container-logos">
    <div class="user">
      <i class="fa-solid fa-bell fa-3x"></i>
      <i class="fa-solid fa-user-gear fa-3x"></i>
    </div>
  </div>
  <!--Contenedor de la imagen-->
  <div class="container">
    <img src="/resources/img/logoSena.png" width="200px" class="mx-auto d-block">
  </div>
  <!-- contenedor del menu -->
  <nav>
    <ul>
      <li><a href="menu-instructor">Inicio</a></li>
      <li>
        <a href="controlAula">Control de aulas</a>
      </li>
      <li>
        <a href="#">Préstamo</a>
        <ul class="submenu">
          <li><a href="material">Materiales</a></li>
<li><a href="herramientas">Herramientas</a></li>
<li><a href="ambientes">Ambientes</a></li>
        </ul>
      </li>
    </ul>
  </nav>
  <!-- CONTENEDOR DEL FONDO Y EL LETRERO -->
  <div class="fondo rounded-top">
    <div class="container-letrero rounded-top">
      Control de aulas
    </div>
    <div class="container-letrero-control rounded-top">
      <section class="control-reportes">
        Reporte de aulas
        <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#exampleModal">
          Agregar observacion
        </button>
      </section>
      <!--boton para ingresar al modal -->

      <!-- Modal -->
      <div class="modal fade" id="exampleModal" aria-hidden="true" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-lg">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Agregue una observacion</h5>
            </div>
            <!-- texto de ambientes -->
            <div class="contenedor-formulario" id="numero">
              <input type="text" class="items" placeholder="a" >
              <label for="" class="label">N° de ambiente</label>
              <!-- from de seleccionar archivo -->
              <form id="foto">
                <div class="archivo" >
                  <input type="file" >
                </div>
              </form>
            </div>
            <!-- body del modal -->
            <div class="modal-body">
              <textarea required="" class="form-control" id="elcontent" name="content" rows="10" data-rule="required"
                data-msg="Please write something for us">Describe tus quejas</textarea>
              <div class="modal-footer">
                <button type="button"  id="Cerrar-bnt" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                <button type="button" id="Enviar-bnt" class="btn btn-success">Enviar</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>
</body>
<script src="/resources/js/controlAula.js"></script>
</html>