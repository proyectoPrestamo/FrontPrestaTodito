<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/resources/css/inventario.css">
    <%- include('./partials/boostrap.ejs') %> 
    <title>Inventario</title>
</head>

<body>

  <%- include('./partials/administrador.ejs') %>



  <div class="container mt-4">
      <div class="row">
        <div class="col-md-12">
          <div class="input-group mb-3">
            <input type="text" class="form-control mr-3" placeholder="Buscar insumo" id="search-input">
            <div class="input-group-append">
              <button class="btn btn-outline-success" type="button" id="search-button">
                <i class="fas fa-search"></i>
              </button>
            </div>
          </div>
          <div class="table-wrapper">
            <table class="table table-borderless" id="tabla-solicitudes">
              <thead>
                <tr class="bg-success">
                  <th>PRODUCTO</th>
                  <th>CANTIDAD</th>
                  <th>FECHA ADQUISICIÓN</th>
                  <th>CÓDIGO</th>
                  <th>ESTADO</th>
                  <th>OPCIONES</th>
                </tr>
              </thead>
              <tbody>
                <tr data-id="ABC123">
                  <td>CUERO</td>
                  <td>11</td>
                  <td>11/12/2023</td>
                  <td>ABC123</td>
                  <td>ESTADO</td>
                  <td> 
                    <i class="fas fa-trash-alt delete-icon trash-icon"></i>  
                    <i class="fas fa-edit edit-icon mr-1" data-toggle="modal" data-target="#edit-modal"></i>
                  </td>
                </tr>
                <tr data-id="ABC456">
                  <td>CUERO</td>
                  <td>11</td>
                  <td>11/12/2023</td>
                  <td>ABC123</td>
                  <td>ESTADO</td>
                  <td> 
                    <i class="fas fa-trash-alt delete-icon trash-icon"></i>  
                    <i class="fas fa-edit edit-icon mr-1" data-toggle="modal" data-target="#edit-modal"></i>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
<!-- Modal -->
<div class="modal fade" id="edit-modal" tabindex="-1" aria-labelledby="edit-modal-label" aria-hidden="true">
<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title" id="edit-modal-label">Editar inventario</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <form>
        <div class="form-group">
          <label for="edit-producto" class="col-form-label">Producto:</label>
          <input type="text" class="form-control" id="edit-producto">
        </div>
        <div class="form-group">
          <label for="edit-cantidad" class="col-form-label">Cantidad:</label>
          <input type="number" class="form-control" id="edit-cantidad">
        </div>
        <div class="form-group">
          <label for="edit-fecha" class="col-form-label">Fecha de adquisición:</label>
          <input type="date" class="form-control" id="edit-fecha">
        </div>
        <div class="form-group">
          <label for="edit-codigo" class="col-form-label">Código:</label>
          <input type="text" class="form-control" id="edit-codigo">
        </div>
        <div class="form-group">
          <label for="edit-estado" class="col-form-label">Estado:</label>
          <select class="form-control" id="edit-estado">
            <option value="DISPONIBLE">DISPONIBLE</option>
            <option value="NO DISPONIBLE">NO DISPONIBLE</option>
          </select>
        </div>
      </form>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
      <button type="button" class="btn btn-success" id="guardar-cambios">Guardar cambios</button>
    </div>
  </div>
</div>
</div>  
</body>
<%- include('./partials/footer.ejs') %>
<script src="/resources/js/inventario.js"></script>
</html>
